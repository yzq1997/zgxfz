                <picker
                    value="{{index4}}"
                    range="{{array4}}"
                    bindchange="bindPickerChange4"
                    bindcancel="bindPickerCancel4"
                >
                    <view class="picker">{{array4[index4]}} </view>
                </picker>
                <image src="../../image/right.png" mode="" />
            </view>
            <view class="gmpt">
                <span class="">手机号码<span class="bx">*</span></span>
                <input class="input1 phone1" bindblur="handleBlur9" type="number" value="" placeholder="请输入手机号码"/>
                <button class="yzm" bindtap='getnum1'>{{getnum1}}</button>
            </view>
            <view class="gmpt">
                <span class="yzmnum">验证码<span class="bx">*</span></span>
                <input class="input1" bindblur="handleBlur10" type="text" value="" placeholder="请输入验证码"/>
            </view>
        </view>

        <button type="default" class="submit">提交投诉</button>
    </view>

